   "execution_count": 1,
   "metadata": {},
   "outputs": [
    {
     "name": "stdout",
     "output_type": "stream",
     "text": [
      "3\n",
      "* * \n",
      " *\n",
      "* * \n",
      " *\n",
      "* * \n",
      " *\n"
     ]
    }
   ],
   "source": [
    "a=int(input())\n",
    "if a==1:\n",
    "    print(\"*\")\n",
    "else:\n",
    "    for j in range(1,2*a+1):\n",
    "        if j%2!=0:\n",
    "            print(\"* \"*(a//2)) if a%2==0 else print(\"* \"*((a+1)//2))\n",
    "        else:\n",
    "            print(\" *\"*(a//2))"
   ]
  }
